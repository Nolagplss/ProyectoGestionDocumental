<Window x:Class="ProyectoDocumentales.Frontend.Formularios.EmpresaForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDocumentales.Frontend.Formularios"
         xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:mvvm="clr-namespace:ProyectoDocumentales.MVVM" d:DataContext="{d:DesignInstance Type=mvvm:MvEmpresa}"
        mc:Ignorable="d"
        Title="CompanyForm" Height="800" Width="1000"
         WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Window.Resources>
     
       
        <!-- Estilo para el Border con sombra -->
        <Style x:Key="BorderConSombra" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="180" ShadowDepth="2" BlurRadius="25" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
    </Window.Resources>
    
    

    <Grid>
        <!-- Borde principal con sombra -->
        <Border Background="White" CornerRadius="8" Margin="15" Style="{StaticResource BorderConSombra}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header con barra superior -->
                <Grid Grid.Row="0" Background="#1d4355" MouseDown="Grid_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Titulo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,15">
                        <mat:PackIcon Kind="Domain" Foreground="White" VerticalAlignment="Center" Height="25" Width="25"/>
                        <TextBlock Margin="10,0,0,0" Text="Añadir Nueva Empresa" Foreground="White" 
                                   VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Boton cerrar -->
                    <Button Grid.Column="1" x:Name="btnCerrar" Click="btnCerrar_Click" 
                            Background="Transparent" BorderThickness="0" Padding="5" Margin="10">
                        <mat:PackIcon Kind="Close" Width="20" Height="20" Foreground="White" />
                    </Button>
                </Grid>

                <!-- Contenido del formulario -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,20">
                    <StackPanel Margin="10">

                        <!-- Datos Basicos de la Empresa -->
                        <TextBlock Text="Datos Básicos de la Empresa" Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Razon Social y CIF -->
                        <Grid Margin="0,10,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4.9*"/>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="4.9*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Razón Social:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="txtRazonSocial" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="0"
                                     Text="{Binding empresa.RazonSocial, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="CIF:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2"/>
                            <TextBox x:Name="txtCIF" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="2"
                                      Text="{Binding empresa.Cif, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <!-- Sector y Responsable -->
                        <Grid Margin="0,10,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4.9*"/>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="4.9*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Sector:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="txtSector" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="0"
                                      Text="{Binding empresa.Sector, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Responsable:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2"/>
                            <ComboBox x:Name="cmbResponsable" Style="{StaticResource ComboBoxStyle}" Grid.Row="1" Grid.Column="2"
                                        ItemsSource="{Binding ResponsablesLibres}" SelectedItem="{Binding empresa.IdResponsableNavigation, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Nombre" SelectionChanged="cmbResponsable_SelectionChanged"
                                      />
                        </Grid>

                        <!-- Direccion y Contacto -->
                        <TextBlock Text="Dirección y Contacto" Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Direccion completa -->
                        <Grid Margin="0,10,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Dirección:" Style="{StaticResource LabelStyle}" Grid.Row="0"/>
                            <TextBox x:Name="txtDireccion" Style="{StaticResource TextBoxStyle}" Grid.Row="1"
                                     Text="{Binding empresa.Direccion, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <!-- Localidad, Provincia y Codigo Postal -->
                        <Grid Margin="0,10,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>


                            <TextBlock Text="Localidad:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0" />
                            <TextBox x:Name="txtLocalidad" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="0"
                                     Text="{Binding empresa.Localidad, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Provincia:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0"/>
                            <TextBox x:Name="txtProvincia" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="1" Margin="10,0,0,0"
                                     Text="{Binding empresa.Provincia, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Código Postal:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2" Margin="10,0,0,0"/>
                            <TextBox x:Name="txtCodigoPostal" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="2" Margin="10,0,0,0"
                                     Text="{Binding empresa.CodigoPostal, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <!-- Telefono y Fax -->
                        <Grid Margin="0,10,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4.9*"/>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="4.9*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Teléfono:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="txtTelefono" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="0"
                                     Text="{Binding empresa.Telefono, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Fax:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2"/>
                            <TextBox x:Name="txtFax" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="2"
                                     Text="{Binding empresa.Fax, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <!-- Separador -->
                        <Border Height="1" Background="#E0E0E0" Margin="0,30,0,20"/>

                        <!-- Expander para añadir nuevo responsable -->
                        <Expander Header="¿No encuentras el responsable? Añadir nuevo responsable" 
                                  Margin="0,10,0,0" Foreground="#1d4355" FontWeight="Medium"
                                  x:Name="expanderResponsable">
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="10" Background="#FAFAFA">
                                <Grid Margin="20,15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Titulo del responsable -->
                                    <TextBlock Grid.Row="0" Text="Datos del Nuevo Responsable" 
                                               Foreground="#1d4355" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>

                                    <!-- Nombre y Apellidos -->
                                    <Grid Grid.Row="1" Margin="0,10,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4.9*"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="4.9*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Nombre:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBox x:Name="txtNombreResponsable" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="0"
                                                 Text="{Binding responsable.Nombre, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Text="Apellidos:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2"/>
                                        <TextBox x:Name="txtApellidosResponsable" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="2"
                                                 Text="{Binding responsable.Apellidos, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                                                 />
                                    </Grid>

                                    <!-- DNI y Correo -->
                                    <Grid Grid.Row="2" Margin="0,10,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4.9*"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="4.9*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="DNI:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBox x:Name="txtDniResponsable" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="0"
                                                 Text="{Binding responsable.Dni, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Text="Correo:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2"/>
                                        <TextBox x:Name="txtCorreoResponsable" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="2"
                                                  Text="{Binding responsable.Correo, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>

                                    <!-- Botón guardar responsable -->
                                    <Grid Grid.Row="3" Margin="0,20,0,0">
                                        <Button x:Name="btnGuardarResponsable" Content="Guardar Responsable" 
                                                Click="btnGuardarResponsable_Click" HorizontalAlignment="Left"
                                                Width="180" Height="40" Background="#00796B" Foreground="White" 
                                                BorderThickness="0" FontWeight="SemiBold">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Expander>

                        <!-- Centros de Trabajo -->
                        <TextBlock Text="Centros de Trabajo" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,10,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="400"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Títulos con contadores -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Título Centros Disponibles con contador -->
                                <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="8" Padding="15,10">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Centros Disponibles" 
                          FontSize="16" FontWeight="SemiBold" 
                          Foreground="#1d4355" VerticalAlignment="Center"/>
                                        <Border Background="#1d4355" CornerRadius="12" Margin="10,0,0,0" 
                        MinWidth="24" Height="24">
                                            <TextBlock Text="{Binding CentrosLibres.Count}" 
                              Foreground="White" FontWeight="Bold" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>

                                <!-- Título Centros Asignados con contador -->
                                <Border Grid.Column="2" Background="#E8F5E8" CornerRadius="8" Padding="15,10">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Centros Asignados" 
                          FontSize="16" FontWeight="SemiBold" 
                          Foreground="#00796B" VerticalAlignment="Center"/>
                                        <Border Background="#00796B" CornerRadius="12" Margin="10,0,0,0" 
                        MinWidth="24" Height="24">
                                            <TextBlock Text="{Binding CentrosSeleccionados.Count}" 
                              Foreground="White" FontWeight="Bold" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Contenedores de tarjetas lado a lado -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ScrollViewer para centros disponibles -->
                                <Border Grid.Column="0" Background="#FAFAFA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                                        <ItemsControl ItemsSource="{Binding CentrosLibres}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" CornerRadius="8" Margin="0,0,0,10" 
                                    BorderBrush="#E0E0E0" BorderThickness="1"
                                   >
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="Gray" Direction="270" 
                                                     ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                                                        </Border.Effect>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Effect">
                                                                            <Setter.Value>
                                                                                <DropShadowEffect Color="Gray" Direction="270" 
                                                                         ShadowDepth="4" BlurRadius="12" Opacity="0.25"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Setter Property="BorderBrush" Value="#1565C0"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>

                                                        <Grid Margin="15">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <!-- Icono y dirección -->
                                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                                <Border Background="#E3F2FD" CornerRadius="20" Width="32" Height="32" 
                                                VerticalAlignment="Top" Margin="0,0,10,0">
                                                                    <TextBlock Text="🏢" FontSize="16" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                                <TextBlock Text="{Binding Direccion}" FontWeight="SemiBold" 
                                                  FontSize="14" Foreground="#1d4355" TextWrapping="Wrap" 
                                                  VerticalAlignment="Center" MaxWidth="200"/>
                                                            </StackPanel>

                                                            <!-- Teléfono -->
                                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                                                                <TextBlock Text="📞" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                                <TextBlock Text="{Binding Telefono}" FontSize="12" 
                                                  Foreground="#666" VerticalAlignment="Center"/>
                                                            </StackPanel>

                                                            <!-- Botón seleccionar -->
                                                            <Button Grid.Row="2" Click="btnSeleccionarCentro_Click" 
                                            Tag="{Binding}" HorizontalAlignment="Stretch"
                                            Background="#1d4355" Foreground="White" 
                                            BorderThickness="0" Height="32"
                                            FontWeight="SemiBold" FontSize="12">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="+ " FontSize="14" FontWeight="Bold"/>
                                                                        <TextBlock Text="Seleccionar"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                               
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>

                                <!-- ScrollViewer para centros asignados -->
                                <Border Grid.Column="2" Background="#FAFAFA" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                                        <ItemsControl ItemsSource="{Binding CentrosSeleccionados}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" CornerRadius="8" Margin="0,0,0,10" 
                                     BorderThickness="2"
                                  >
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="Green" Direction="270" 
                                                     ShadowDepth="2" BlurRadius="8" Opacity="0.15"/>
                                                        </Border.Effect>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Effect">
                                                                            <Setter.Value>
                                                                                <DropShadowEffect Color="Green" Direction="270" 
                                                                         ShadowDepth="4" BlurRadius="12" Opacity="0.25"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>

                                                        <Grid Margin="15">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <!-- Estado y dirección -->
                                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                                <Border Background="#4CAF50" CornerRadius="20" Width="32" Height="32" 
                                                VerticalAlignment="Top" Margin="0,0,10,0">
                                                                    <TextBlock Text="✓" FontSize="16" FontWeight="Bold" 
                                                      Foreground="White" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                                <TextBlock Text="{Binding Direccion}" FontWeight="SemiBold" 
                                                  FontSize="14" Foreground="#1d4355" TextWrapping="Wrap" 
                                                  VerticalAlignment="Center" MaxWidth="200"/>
                                                            </StackPanel>

                                                            <!-- Teléfono -->
                                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                                                                <TextBlock Text="📞" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                                <TextBlock Text="{Binding Telefono}" FontSize="12" 
                                                  Foreground="#666" VerticalAlignment="Center"/>
                                                            </StackPanel>

                                                            <!-- Botón eliminar -->
                                                            <Button Grid.Row="2" Click="btnEliminarCentro_Click" 
                                            Tag="{Binding}" HorizontalAlignment="Stretch"
                                            Background="#00796B" Foreground="White" 
                                            BorderThickness="0" Height="32" 
                                            FontWeight="SemiBold" FontSize="12">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="× " FontSize="16"  FontWeight="Bold" VerticalAlignment="Center"/>
                                                                        <TextBlock Text="Remover" VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                               
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Grid>

                            <!-- Mensaje cuando no hay centros -->
                            <Grid Grid.Row="1" Visibility="{Binding CentrosLibres.Count}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Mensaje para centros disponibles vacío -->
                                <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="8" 
                Visibility="{Binding CentrosLibres.Count, Converter={StaticResource BoolToVisConverter}}">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                        <TextBlock Text="📭" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                                        <TextBlock Text="No hay centros disponibles" FontSize="14" 
                          Foreground="#666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Mensaje para centros asignados vacío -->
                                <Border Grid.Column="2" Background="#F5F5F5" CornerRadius="8"
                Visibility="{Binding CentrosSeleccionados.Count, Converter={StaticResource BoolToVisConverter}}">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                        <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                                        <TextBlock Text="Ningún centro asignado" FontSize="14" 
                          Foreground="#666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>


                            <!-- Añadir nuevo centro de trabajo -->
                            <Expander Grid.Row="2" Header="Añadir Centro de Trabajo" Margin="0,20,0,0" 
              Foreground="#1d4355" FontWeight="Medium">
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="10" Background="#FAFAFA">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Campos del centro de trabajo -->
                                        <Grid Grid.Row="0" Margin="0,10,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6.5*"/>
                                                <ColumnDefinition Width="0.25*"/>
                                                <ColumnDefinition Width="3.25*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Dirección:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
                                            <TextBox x:Name="txtDireccionCentro" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="0"
                             Text="{Binding centroTrabajo.Direccion, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

                                            <TextBlock Text="Teléfono:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="2"/>
                                            <TextBox x:Name="txtTelefonoCentro" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="2"
                             Text="{Binding centroTrabajo.Telefono, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>
                                        </Grid>

                                        <!-- Boton añadir centro -->
                                        <Button Grid.Row="1" x:Name="btnAnadirCentro" Content="Añadir Centro de Trabajo" 
                                                Click="btnAnadirCentro_Click" HorizontalAlignment="Right"
                                                Width="200" Height="40" Background="#28A745" Foreground="White" Margin="10,10,0,0"
                                                BorderThickness="0" FontWeight="SemiBold">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Expander>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>

                <!-- Botones finales -->
                <Grid Grid.Row="2" Background="#F8F9FA" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

